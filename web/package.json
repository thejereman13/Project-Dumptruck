{
  "private": true,
  "name": "web",
  "version": "0.0.0",
  "proxy": "https://localhost:8000",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-prerender -c ./preact.config.js --json",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest ./tests",
    "test-watch": "jest ./tests --watch --collect-coverage",
    "stress_websockets": "artillery run websocket_stresstest.yml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{jsx,ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "@popperjs/core": "^2.4.4",
    "@types/gapi": "0.0.39",
    "@types/material__base": "^0.35.2",
    "@types/material__ripple": "^0.35.2",
    "@types/muicss": "^0.9.2",
    "@types/youtube": "0.0.39",
    "preact": "^10.3.1",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.0.0",
    "preact-mui": "^0.1.1",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-google-login": "^5.1.21",
    "react-popper": "^2.2.3",
    "ts-jest": "^26.2.0",
    "use-debounce-preact": "^1.0.2"
  },
  "devDependencies": {
    "@teamsupercell/typings-for-css-modules-loader": "^2.2.0",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.1.2",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "artillery": "^1.6.1",
    "compression-webpack-plugin": "^5.0.0",
    "css-loader": "^3.5.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.1",
    "jest": "^26.4.2",
    "jest-preset-preact": "^1.0.0",
    "lint-staged": "^10.0.7",
    "preact-cli": "^3.0.0",
    "prettier": "^1.19.1",
    "sirv-cli": "^1.0.0-next.3",
    "terser-webpack-plugin": "^3.0.7",
    "ts-loader": "^8.0.2",
    "typescript": "^3.7.5"
  }
}
